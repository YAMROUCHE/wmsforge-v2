{
  "name": "wmsforge",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev worker/src/index.ts",
    "build": "tsc && vite build",
    "build:worker": "tsc -p worker/tsconfig.json",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply wmsforge-db --remote"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "@tanstack/react-query": "^5.51.0",
    "hono": "^4.5.0",
    "drizzle-orm": "^0.33.0",
    "zod": "^3.23.0",
    "lucide-react": "^0.424.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "tailwindcss": "^3.4.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.40",
    "wrangler": "^3.72.0",
    "drizzle-kit": "^0.24.0",
    "@cloudflare/workers-types": "^4.20240806.0"
  }
}
